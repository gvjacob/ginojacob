<footer class="footer__container">
  <p class="footer__introduction">{{ footer.introduction }}</p>
  <ul>
    {% for link in footer.links %}
      <li class="footer__link">
        <a href="{{ link.href }}">
          <span>{{ link.overline }}</span>
          <h3>
            {{ link.label }}
          </h3>
        </a>
      </li>
    {% endfor %}
  </ul>
  <div class="footer__underline">
    <ul>
      {% for resource in footer.resources %}
        <li>
          <span>
            <a href="{{ resource.href }}">
              {{ resource.label }}
            </a>
          </span>
        </li>
      {% endfor %}
    </ul>
    <span class="footer__copyright">{{ footer.copyright }}</span>
  </div>
</footer>
